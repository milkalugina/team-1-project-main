<p id="notice"><%= notice %></p>

<h1>Blocklists</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocklists.each do |blocklist| %>
      <tr>
        <td><%= blocklist.id %></td>
        <td><%= blocklist.type %></td>
        <td><%= link_to 'Show', blocklist %></td>
        <td><%= link_to 'Edit', edit_blocklist_path(blocklist) %></td>
        <td><%= link_to 'Destroy', blocklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blocklist', new_blocklist_path %>
